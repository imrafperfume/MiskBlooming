model HeroSlide {
    id          String  @id @default(cuid())
    title       String
    subtitle    String?
    description String?
    imageUrl    String
    published   Boolean @default(false)
    order       Int     @default(0)

    // Array of buttons -> Stored as JSON
    buttons   Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
