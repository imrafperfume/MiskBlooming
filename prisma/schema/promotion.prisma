model Promotion {
    id            String        @id @default(uuid())
    name          String
    discountType  DISCOUNT_TYPE
    discountValue Float
    startDate     DateTime
    endDate       DateTime
    isActive      Boolean       @default(true)
    imageUrl      String
    scope         SCOPE
    promoCode     String        @unique
    status        status        @default(ACTIVE)
    categories    String[]
    products      String[]
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
}

enum SCOPE {
    ALL
    CATEGORY
    PRODUCT
}

enum DISCOUNT_TYPE {
    PERCENTAGE
    FIXED
}

enum status {
    ACTIVE
    EXPIRED
    PAUSED
}
