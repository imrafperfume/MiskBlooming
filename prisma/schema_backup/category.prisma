model Category {
    id            String        @id @default(cuid())
    name          String        @unique
    description   String?
    imageUrl      String?
    subcategories SubCategory[]
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
}

model SubCategory {
    id         String   @id @default(cuid())
    name       String
    categoryId String
    category   Category @relation(fields: [categoryId], references: [id])
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@unique([name, categoryId])
}
