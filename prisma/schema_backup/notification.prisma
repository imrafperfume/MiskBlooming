model Notification {
    id        String   @id @default(cuid())
    type      String
    message   String
    orderId   String   @default("")
    createdAt DateTime @default(now())
    read      Boolean  @default(false)
}

model PushSubscription {
    id        String   @id @default(cuid())
    endpoint  String   @unique
    keys      Json
    createdAt DateTime @default(now())
}
